<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" card_view:cardCornerRadius="12dp" card_view:cardElevation="2dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

        <TextView android:id="@+id/textOrderCode" android:layout_width="match_parent" android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp" tools:text="订单号" />

        <TextView android:id="@+id/textOrderInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" tools:text="车辆/客户/金额" />

        <TextView android:id="@+id/textOrderDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" tools:text="起止日期" />

        <TextView android:id="@+id/textRemainingDays" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:textColor="#FF6B6B" android:textSize="12sp" android:visibility="gone" tools:text="还车倒计时: 还有3天" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:orientation="horizontal">

            <TextView android:id="@+id/textStatus" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="状态" android:paddingStart="12dp" android:paddingEnd="12dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:textStyle="bold" android:gravity="center_vertical" />

            <Button android:id="@+id/buttonPayment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支付" android:visibility="gone" android:layout_marginStart="12dp" android:paddingStart="12dp" android:paddingEnd="12dp" android:background="@drawable/btn_danger" android:textColor="@android:color/white" />

            <Button android:id="@+id/buttonEarlyReturn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="提前还车" android:visibility="gone" android:layout_marginStart="12dp" android:paddingStart="12dp" android:paddingEnd="12dp" android:background="@drawable/btn_primary" android:textColor="@android:color/white" />

            <Button android:id="@+id/buttonDelete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删除" android:layout_marginStart="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
