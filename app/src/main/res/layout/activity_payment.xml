<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".ui.PaymentActivity">

    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="?attr/colorPrimary" android:title="支付界面" android:titleTextColor="@android:color/white" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp" android:background="@android:color/white">

        <TextView android:id="@+id/textSearchKeyword" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="@android:color/black" android:paddingBottom="8dp" android:text="搜索条件: 全部车型" />

        <TextView android:id="@+id/textReturnDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="#FF6B6B" android:paddingBottom="8dp" android:text="还车日期: 未设置" />

        <TextView android:id="@+id/textCountdown" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="#FF9800" android:paddingBottom="12dp" android:text="支付剩余时间: 15:00" android:visibility="gone" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingStart="16dp" android:paddingEnd="16dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:background="@android:color/white">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="选择支付方式" android:textSize="15sp" android:textStyle="bold" android:paddingBottom="8dp" android:textColor="@android:color/black" />

        <RadioGroup android:id="@+id/paymentMethodGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

            <RadioButton android:id="@+id/radioWeChat" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableStart="@drawable/ic_payment_wechat" android:drawablePadding="12dp" android:padding="8dp" android:text="微信支付" android:textSize="14sp" />

            <RadioButton android:id="@+id/radioAlipay" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableStart="@drawable/ic_payment_alipay" android:drawablePadding="12dp" android:padding="8dp" android:text="支付宝" android:textSize="14sp" android:layout_marginTop="4dp" />

            <RadioButton android:id="@+id/radioBankCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableStart="@drawable/ic_payment_bankcard" android:drawablePadding="12dp" android:padding="8dp" android:text="银行卡" android:textSize="14sp" android:layout_marginTop="4dp" />
        </RadioGroup>
    </LinearLayout>

    <!-- 搜索结果列表 -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/searchResultsRecyclerView" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="vertical" android:padding="8dp" />

    <!-- 支付按钮 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:background="@android:color/white">

        <Button android:id="@+id/paymentButton" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:text="确认支付" android:textSize="16sp" android:background="#FF6B6B" android:textColor="@android:color/white" android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
